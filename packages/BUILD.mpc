load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "srcs",
    srcs = glob(["**"]),
)

configure_make(
    name = "libmpc",
    lib_source = ":srcs",
    deps = ["@gmp//:libgmp", "@mpfr//:libmpfr"],
    out_data_dirs = ["share"],
    visibility = ["//visibility:public"],
)
